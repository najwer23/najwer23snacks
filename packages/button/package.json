{
  "name": "@najwer23snacks/button",
  "version": "1.0.8",
  "sideEffects": false,
  "license": "MIT",
  "main": "./dist/button.js",
  "module": "./dist/button.mjs",
  "types": "./dist/button.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/button.d.ts",
      "import": "./dist/button.mjs",
      "require": "./dist/button.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "build2": "tsup src/button.tsx --format esm,cjs --dts --out-dir dist",
    "dev2": "tsup src/button.tsx --watch --format esm,cjs --dts --out-dir dist",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
