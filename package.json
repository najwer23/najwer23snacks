{
  "name": "najwer23snacks",
  "version": "1.0.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "start": "yarn dev",
    "deploy": "yarn --cwd ./apps/docs deploy",
    "dev": "turbo run dev",
    "format:check": "prettier --c \"**/*.{json,mdx,ts,tsx,md,css}\"",
    "format": "prettier --write \"**/*.{json,mdx,ts,tsx,md,css}\"",
    "lint": "turbo run lint",
    "release": "turbo run build --filter=docs^... && yarn version-packages && changeset publish",
    "version-packages": "changeset version",
    "plop": "plop"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "husky": "^9.1.4",
    "plop": "^4.0.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.21.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4"
  },
  "packageManager": "yarn@4.4.0"
}
